{
  "name": "gs-client",
  "version": "1.0.0",
  "description": "GoodRestaurant Client Application with Express Server",
  "private": true,
  "workspaces": [
    "gs-client-app",
    "gs-client-server"
  ],
  "scripts": {
    "dev:app": "cd gs-client-app && npm run dev",
    "dev:server": "cd gs-client-server && npm run dev",
    "dev": "concurrently \"npm run dev:app\" \"npm run dev:server\"",
    "build:app": "cd gs-client-app && npm run build",
    "build:server": "cd gs-client-server && npm run build",
    "build:server:clean": "cd gs-client-server && npm run build && cd .. && npm run clean && npm run build",
    "build": "npm run build:app && npm run build:server",
    "start": "node dist/server/server.js",
    "start:https": "cross-env USE_HTTPS=true node dist/server/server.js",
    "deploy": "npm run build && npm start",
    "deploy:https": "npm run build && npm run start:https",
    "clean": "rimraf dist",
    "install:all": "npm install && cd gs-client-app && npm install && cd ../gs-client-server && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "https": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0"
  }
}
